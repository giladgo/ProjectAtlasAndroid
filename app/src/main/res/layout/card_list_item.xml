<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="3dp" android:paddingBottom="5dp"
    android:paddingStart="5dp" android:paddingEnd="5dp"
    android:id="@+id/main_relative_layout">

    <TextView
        android:layout_width="50dip"
        android:id="@+id/faction_logo"
        android:textSize="40sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_height="wrap_content" />



    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_title"
        android:textSize="20sp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="#000"
        android:layout_toRightOf="@+id/faction_logo"
        android:layout_toLeftOf="@+id/influence"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_faction_subtype"
        android:layout_toLeftOf="@+id/influence"
        android:layout_toRightOf="@+id/faction_logo"
        android:layout_below="@+id/card_title"
        android:layout_alignParentBottom="true" />



    <TextView
        android:id="@+id/influence"
        android:layout_width="5dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:gravity="top|center_horizontal"
        android:textSize="13sp" android:lineSpacingMultiplier="0.5" />


</RelativeLayout>